## Makevars.in for HiSpaR package compilation (configured by autoconf)

# Compiler standard
CXX_STD = CXX17

# Flags set by configure script
PKG_CPPFLAGS = -I../inst/include -I/opt/homebrew/opt/libomp/include -I/opt/homebrew/opt/armadillo/include
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -Xclang -fopenmp
PKG_LIBS = $(SHLIB_OPENMP_CXXLIBS) -L/opt/homebrew/opt/libomp/lib -lomp -L/opt/homebrew/opt/armadillo/lib -larmadillo -framework Accelerate
